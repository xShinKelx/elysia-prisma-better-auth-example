{
	"name": "elysia-prisma",
	"version": "1.0.50",
	"scripts": {
		"test": "echo \"Error: no test specified\" && exit 1",
		"dev": "bun run --watch src/index.ts",
		"build": "bun build --compile --target bun --minify-whitespace --minify-syntax --external @prisma/client --outfile server src/index.ts",
		"dev:up": "docker compose up -d",
		"dev:down": "docker compose down",
		"db:gen": "prisma generate",
		"db:migrate": "prisma migrate dev",
		"auth:gen": "bunx @better-auth/cli generate --config src/libs/auth.ts --output prisma/tmp-auth.prisma",
		"auth:migrate": "bunx @better-auth/cli migrate  --config src/libs/auth.ts"
	},
	"dependencies": {
		"@elysiajs/eden": "^1.4.5",
		"@elysiajs/openapi": "^1.4.11",
		"@elysiajs/opentelemetry": "^1.4.7",
		"@elysiajs/static": "^1.4.7",
		"@prisma/adapter-pg": "^7.0.0",
		"@prisma/client": "^7.0.0",
		"@prisma/instrumentation": "^7.0.0",
		"@tanstack/react-query": "^5.90.10",
		"better-auth": "^1.4.0",
		"elysia": "latest",
		"pg": "^8.16.3",
		"tailwindcss": "^4.1.17"
	},
	"devDependencies": {
		"@better-auth/cli": "^1.4.0",
		"@types/bun": "^1.3.3",
		"@types/node": "^24.10.1",
		"@types/pg": "^8.15.6",
		"@types/react": "^19.2.6",
		"@types/react-dom": "^19.2.3",
		"bun-plugin-tailwind": "^0.1.2",
		"bun-types": "latest",
		"dotenv": "^17.2.3",
		"prisma": "^7.0.0",
		"prismabox": "^1.1.25",
		"react": "^19.2.0",
		"react-dom": "^19.2.0",
		"tw-animate-css": "^1.4.0"
	},
	"module": "src/index.js"
}
